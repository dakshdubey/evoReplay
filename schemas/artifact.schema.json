{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "EvoReplay Artifact (.evor)",
    "type": "object",
    "required": [
        "magic",
        "version",
        "metadata",
        "execution_graph",
        "determinism_map"
    ],
    "properties": {
        "magic": {
            "type": "string",
            "const": "EVOR"
        },
        "version": {
            "type": "integer",
            "minimum": 1
        },
        "metadata": {
            "type": "object",
            "properties": {
                "timestamp": {
                    "type": "integer"
                },
                "runtime": {
                    "type": "string"
                },
                "app_hash": {
                    "type": "string"
                }
            }
        },
        "execution_graph": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "BRANCH",
                            "FUNCTION"
                        ]
                    },
                    "decision": {
                        "type": "boolean"
                    }
                }
            }
        },
        "determinism_map": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "TIME",
                            "RANDOM",
                            "IO"
                        ]
                    },
                    "val": {}
                }
            }
        }
    }
}